pipeline {
    agent {
        label "terraform-exec"
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/bharathkkb/simple-terraform-gcp-example.git'
            }
        }
        stage('TF init & validate') {
            steps {
                 container('terraform') {
                sh '''cd simple-example-create
                terraform init
                terraform validate'''
                 }
            }
        }
        stage('TF plan') {
            steps {
                 container('terraform') {
                  sh '''cd simple-example-create
                terraform plan -var project_id=test-proj-cicd-c496 --out=test.out'''
                 }
            }
        }
            stage('Wait for Appproval') {
              when { branch "master" }
      steps {
        script {
          def userInput = input(id: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
        }
      }
    }
        stage('TF Apply') {
          when { branch "master" }
      steps {
        container('terraform') {
          sh '''cd simple-example-create
          terraform apply -input=false test.out'''
        }
      }
    }
    }
}